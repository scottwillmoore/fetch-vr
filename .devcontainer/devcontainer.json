{
	"build": {
		"args": {
			"LANGUAGE": "en_US",
			"ROS_DISTRIBUTION": "melodic",
			"ROS_PACKAGE": "desktop",
			"TIMEZONE": "Australia/Melbourne",
			"UBUNTU_DISTRIBUTION": "bionic",
			"UBUNTU_MIRROR": "au",
			"USERNAME": "ros"
		},
		"dockerfile": "Dockerfile"
	},
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"LD_LIBRARY_PATH": "/usr/lib/wsl/lib",
		"PULSE_SERVER": "${localEnv:PULSE_SERVER}",
		"WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
		"XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}"
	},
	"containerUser": "ros",
	"extensions": [
		"ms-python.python",
		"ms-vscode.cmake-tools",
		"ms-vscode.cpptools"
	],
	"mounts": [
		"source=/mnt/wslg,target=/mnt/wslg,type=bind",
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
		"source=/usr/lib/wsl,target=/usr/lib/wsl,type=bind"
	],
	"name": "Research",
	"runArgs": [
		"--device=/dev/dxg",
		"--gpus=all",
		"--network=host",
		"--uts=host"
	],
	"settings": {
		"cmake.configureOnEdit": false,
		"cmake.configureOnOpen": false
	},
	"workspaceFolder": "/home/ros",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/ros/research,type=bind"
}
