let &t_EI = "\e[2 q"
let &t_SI = "\e[6 q"

noremap <Space> <Leader>
noremap <C-c> <Esc>
noremap j gj
noremap k gk

set autoindent
set backspace=eol,indent,start
set belloff=all
set encoding=utf-8
set foldopen=mark,search,tag,undo
set hidden
set ignorecase
set incsearch
set laststatus=2
set list
set listchars=tab:»\ ,extends:›,precedes:‹,nbsp:·,trail:·
set mouse=a
set nohlsearch
set noshowmode
set nowrap
set number
set ruler
set scrolloff=4
set shiftwidth=4
set sidescrolloff=4
set smartcase
set smartindent
set softtabstop=4
set spelllang=en_au,en_gb
set splitbelow
set splitright
set tabstop=4
set ttimeout
set ttimeoutlen=50
set wildmenu

filetype plugin indent on
syntax on
